{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scopes",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/scopes",
            "args": ["${file}"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "MIMode": "gdb",
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },        
